{ 
    "version": 1,

    "formatters": { 
        "standard": { 
            "format": "%(asctime)s (%(name)s) %(levelname)s - %(message)s",
            "datefmt": "%d-%m-%Y %I:%M:%S"
        }
    },

    "handlers": { 
        "console": { 
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stderr",
            "formatter": "standard",
            "level": "ERROR"
        },

        "file": { 
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "logs/root.log",
            "formatter": "standard",
            "maxBytes": 1000000,
            "encoding": "utf8",
            "backupCount": 10,
            "level": "INFO",
            "mode": "a"
        }
    },

    "loggers": {
        "": {
            "handlers": ["console", "file"],
            "level": "INFO"
        },

        "extension": {
            "handlers": ["console", "file"],
            "level": "DEBUG"
        }
    } 
}